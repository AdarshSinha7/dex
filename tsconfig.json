{
  "compilerOptions": {
    "target": "ES2020",                     // The JavaScript version to compile to
    "module": "CommonJS",                   // The module system to use
    "strict": true,                         // Enable strict type-checking
    "esModuleInterop": true,                // Enable interoperation with ES modules
    "skipLibCheck": true,                   // Skip type-checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased file names
    "outDir": "./dist",                     // Output directory for compiled files
    "rootDir": "./src",                     // Source root directory
    "resolveJsonModule": true               // Allow importing .json files
  },
  "include": ["src"],                      // Folders to include in the compilation
  "exclude": ["node_modules"]              // Folders to exclude
}
